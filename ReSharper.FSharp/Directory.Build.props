<Project>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE;DEBUG;JET_MODE_ASSERT</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DefineConstants>TRACE</DefineConstants>
  </PropertyGroup>
  
  <PropertyGroup>
    <FSharpCompilerServiceVersion>2021.2.0</FSharpCompilerServiceVersion>
    <FSharpCoreVersion>5.0.0</FSharpCoreVersion>
    <ValueTupleVersion>4.5.0</ValueTupleVersion>
  </PropertyGroup>

  <PropertyGroup>
    <CSharpLanguageVersion>8</CSharpLanguageVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.ValueTuple" Version="$(ValueTupleVersion)" />
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.0-preview.2" />
  </ItemGroup>

  <PropertyGroup>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>$(MSBuildThisFileDirectory)resharper-fsharp.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <Import Project="$(MSBuildThisFileDirectory)..\rider-fsharp\build\DotNetSdkPath.generated.props" />

  <PropertyGroup>
    <Subplatforms>$(DotNetSdkPath)\Build</Subplatforms>

    <PlatformSdkSubplatform>$(Subplatforms)\SubplatformReference.Platform_Sdk.Props</PlatformSdkSubplatform>
    <PsiFeaturesSubplatform>$(Subplatforms)\SubplatformReference.Psi.Features_src.Props</PsiFeaturesSubplatform>
    <PsiFeaturesTestSubplatform>$(Subplatforms)\SubplatformReference.Psi.Features_test_Framework.Props</PsiFeaturesTestSubplatform>
    <RdBackendCommonSubplatform>$(Subplatforms)\SubplatformReference.Rider_RdBackend.Common.Props</RdBackendCommonSubplatform>
    <RiderBackendSubplatform>$(Subplatforms)\SubplatformReference.Rider_Rider.Backend.Props</RiderBackendSubplatform>
  </PropertyGroup>
</Project>
